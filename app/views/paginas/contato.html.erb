<h1>Fale Conosco</h1>

<% if @contato.errors.any? %>
<pre class="alert alert-danger">
  <% for message in @contato.errors.full_messages %>
    <%= message %>
  <% end %>
</pre>
<% end %>

<div class="row">
    <div class="col-md-6">
        <%= form_tag do %>
          <div class="form-group">
            <label>Nome:</label>
            <%= text_field_tag 'contato[nome]', @contato.nome, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label>Email:</label>
            <%= email_field_tag 'contato[email]', @contato.email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label>Mensagem:</label>
            <%= text_area_tag 'contato[mensagem]', @contato.mensagem, class: 'form-control', rows: 4 %>
          </div>

          <input type="submit" class="btn btn-primary pull-right" value="Enviar">
        <% end %>
    </div>

    <div class="col-md-6 col-xs-12 text-right well">
      <h5>Entre em contato pelo formulário ao lado, ou pelo endereço abaixo:</h5>
      <address>
        R. Prof. Itamar Orlando Soares, 161

      </address>
    </div>
</div><!-- .row -->
